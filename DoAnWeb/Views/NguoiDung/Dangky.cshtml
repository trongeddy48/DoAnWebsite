
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<table align="center"
        style="width: 45%;
        left: 35%;
        position: absolute;
        top: 25%;
        background-image: url('../../Content/images/xboxbnlog.jpg');
        background-size: cover;
        color: white;
        font-weight:400;
        border-radius: 10px;
    ">
    <h2 style="text-align:center; position:absolute; top:19%;left:50%;">Đăng Ký Thành viên</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu:</td>
            <td>
                @Html.Password("Nhaplaimatkhau")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" name="Đăng ký" style="width:70px; border-radius: 5px; background-color: red; color: white; font-weight: bold; margin-left: 57px;"/>
            </td>
        </tr>
    }
</table>
<div class="clear" style="margin-bottom: 200px;"></div>

