@model IEnumerable<DoAnWeb.Models.tblKhacHang>

@{
    ViewBag.Title = "Khachhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;margin-bottom:34px">Quản Lý Khách Hàng</h2>

<table class="table">
    <tr>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Tên khách hàng
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Tài khoản
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Mật khẩu
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Email
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Địa chỉ
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Số điện thoại
        </th>
        <th style="border:1px solid;font-size: 15px;text-align: center;" }>
            Chức năng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td style="border:1px solid;text-align:center">
                @Html.ActionLink("Xóa", "Xoakhachhang", new { id = item.MaKH })
            </td>
        </tr>
    }

</table>
