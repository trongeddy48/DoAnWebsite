@model DoAnWeb.Models.tblSanPham

@{
    ViewBag.Title = "XoaSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Xác Nhận Thông Tin Sản Phẩm Cần Xóa</h2>

<h3 style="text-align:center">Bạn có chắc muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <dd>
        <img src="@Url.Content("~/Content/HinhSanPham/" + Model.HinhAnh)" style="margin-left:60%;width:37%;margin-top:-10px;border-radius:10px;border:1px solid" />
    </dd>
    <dl class="dl-horizontal" style="margin-top:-37%;margin-left:-17px;border:1px solid;width:60%;border-radius:10px">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Giá tiền:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GiaTien) VNĐ
        </dd>

        <dt>
            Số lượng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Mã nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNCC)
        </dd>

        <dt>
            Mã thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTH)
        </dd>

        <dt>
            Mã loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

    </dl>
    <div class="delete-image">
        <img src="~/Content/images/delete.gif" style="width:24%;margin-left:300px" />
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:9%;margin-bottom:-30px">
            <input type="submit" value="Xóa" class="btn btn-default" style="margin-left:44%" /> |
            @Html.ActionLink("TRỞ VỀ", "Game")
        </div>
    }
</div>
